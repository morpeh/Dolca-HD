<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
	android:layout_width="match_parent" android:layout_height="match_parent">
	<LinearLayout android:id="@+id/main_layout_for_ad"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		
		<LinearLayout android:orientation="horizontal"
			android:layout_width="match_parent" android:layout_height="fill_parent"
			android:id="@+id/internalLayout">

			<fragment class="com.volnatech.dolca.Main$TitlesFragment"
				android:id="@+id/titles" android:layout_width="0px"
				android:layout_weight="0.4" android:layout_height="match_parent" />

			<FrameLayout android:id="@+id/details"
				android:layout_weight="1" android:layout_width="0px"
				android:layout_height="match_parent" android:background="?android:attr/detailsElementBackground" />

		</LinearLayout>
	</LinearLayout>
</FrameLayout>